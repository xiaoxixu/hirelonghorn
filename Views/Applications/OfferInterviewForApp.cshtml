@model hirelonghorn.Models.Application
@{
    ViewData["Title"] = "Offer Interview";
}

<h2>Offer Interview</h2>


<div class="row">
    <div class="col-md-4">
        <form asp-action="OfferInterviewForApp" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.ApplicationID)
            @Html.HiddenFor(model => model.Active)
            @Html.HiddenFor(model => model.StatusType)
            @Html.HiddenFor(model => model.AppUser.Email)
            @Html.HiddenFor(model => model.AppUser.FullName)
            @Html.HiddenFor(model => model.AppUser.FirstName)
            @Html.HiddenFor(model => model.AppUser.LastName)


            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.AppUser.FirstName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AppUser.FirstName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.AppUser.LastName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AppUser.LastName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Position.Company.CompanyName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Position.Company.CompanyName)
                </dd>
            </dl>
            <div class="form-group">
                <label>Select a Position:</label>
                @Html.DropDownList("SelectedPosition", (SelectList)ViewBag.AllPositions, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
