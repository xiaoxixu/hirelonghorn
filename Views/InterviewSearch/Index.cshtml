@model IEnumerable<hirelonghorn.Models.Interview>
@{
    ViewData["Title"] = "Index";
}
<h2>Interview List</h2>

<form asp-action="Index" asp-controller="InterviewSearch" method="get">
    <p class="form-group">
        <a asp-action="InterviewSearch" class="btn btn-danger">Search Interview</a>
    </p>
    <p>
        Displaying @ViewBag.SelectedInterviewCount of @ViewBag.AllInterviewCount Interviews
    </p>
</form>

@*<p>
        Displaying @ViewBag.SelectedBookCount of @ViewBag.AllBookCount Books
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InterviewTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position.Company.CompanyName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InterviewTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position.Company.CompanyName)
                </td>

            </tr>
        }
    </tbody>
</table>
