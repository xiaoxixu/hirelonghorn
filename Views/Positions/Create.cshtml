@model hirelonghorn.Models.Position

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Position</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Company.CompanyName)
            @Html.HiddenFor(model => model.Company.CompanyEmail)
            @Html.HiddenFor(model => model.Company.CompanyID)
            @Html.HiddenFor(model => model.Company.Industry)
            @Html.HiddenFor(model => model.Company.Description)
            <div class="form-group">
                <label asp-for="PositionTitle" class="control-label"></label>
                <input asp-for="PositionTitle" class="form-control" />
                <span asp-validation-for="PositionTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Position Type:</label>
                <label class="radio">@Html.RadioButton("PositionType", hirelonghorn.Controllers.Classification.I)Intern</label>
                <label class="radio">@Html.RadioButton("PositionType", hirelonghorn.Controllers.Classification.FT)Full Time</label>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Applicable Majors:</label>
                @Html.ListBox("SelectedMajors", (MultiSelectList)ViewBag.AllMajors, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

